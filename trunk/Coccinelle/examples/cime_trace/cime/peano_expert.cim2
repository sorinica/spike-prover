(* ceci permet de generer la preuve de terminaison de peano avec paire
   de dep + rpo *)

let F_peano = signature "
0 : constant;
s : unary;
p : binary;
m : binary;
";

let X = vars "x y z";

let R_peano = TRS F_peano X "
p(x,0) -> x;
p(x,s(y)) -> s(p(x,y));
m(x,0) -> 0;
m(x,s(y)) -> p(m(x,y),x);
";


#time on;
polyinterpkind {("rpo",0)};
termcrit "dp";
termcrit "nograph";
termcrit "nomarks";
termination R_peano;
new_coq_dp_proof2 "toto.v" "titi.v" R_peano;
#quit;
